{
  "name": "travel-heaven-hotel-booking",
  "version": "1.0.0",
  "description": "A modern hotel booking web application",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend/react-app && npm start",
    "install-all": "npm install && cd frontend/react-app && npm install && cd ../../backend && npm install",
    "build": "cd frontend/react-app && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "hotel",
    "booking",
    "travel",
    "react",
    "nodejs"
  ],
  "author": "VT-2004",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
} 